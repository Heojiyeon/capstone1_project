extends includes/layout.pug
block content
    .list-group
        each val in for_front_t
            a.list-group-item.list-group-item-action( aria-current='' )
                .d-flex.w-100.justify-content-between
                div
                    h3.mb-1= JSON.stringify(val.rank) + "위"            
                    h3.mb-1= JSON.stringify(val.name)
                    h3.mb-2= val.ADDRESS1
                br
                br
                div
                    img(src= val.IMAGE1 style='width : 200px; height : 200px; float:left;')
                    //- img(src= val.IMAGE2 style='width : 200px; height : 200px;')
                br
                br
                form(action="/user_choice_tour", method="post")     
                    button.btn.btn-warning.float-left.mr-3(type="submit" name="user_choice_tour" value=val.id) 이 관광지로 선택!
                button.btn.btn-dark.float-left.mr-3(type="submit" data-toggle="collapse" data-parent="#accordion" href= `#${val.rank}`) 자세히 보기
                br
                p.mb-1= "총 점수 : " + val.rscore
                p.mb-2 (＊10점 만점)
                br
                br
                .panel-collapse.collapse.in(id=`${val.rank}`)
                    .panel-body
                        br
                        br
                        br
                        br
                        br
                        br
                        br
                        br
                        h6.detail= "| 상세 정보 : " 
                        h6.detail= val.DETAIL
                        br
                        h6.detail= "| 개장 시간 : " 
                        h6.detail= val.TIME
                        br
                        h6.detail= "| 편의시설 정보 : " 
                        h6.detail= val.EXIT
                        h6.detail= val.RESTROOM
                        h6.detail= val.ELEVATOR